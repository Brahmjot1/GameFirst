<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- solids that simulate shadow !-->
    <item>
        <shape>
            <corners android:radius="@dimen/size_8dp"></corners>
            <solid android:color="#10CCCCCC" />
            <padding
                    android:bottom="@dimen/size_1dp"
                    android:left="@dimen/size_1dp"
                    android:right="@dimen/size_1dp"
                    android:top="@dimen/size_1dp" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="@dimen/size_8dp"></corners>
            <solid android:color="#20CCCCCC" />
            <padding
                    android:bottom="@dimen/size_1dp"
                    android:left="@dimen/size_1dp"
                    android:right="@dimen/size_1dp"
                    android:top="@dimen/size_1dp" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="@dimen/size_8dp"></corners>
            <solid android:color="#40CCCCCC" />
            <padding
                    android:bottom="@dimen/size_1dp"
                    android:left="@dimen/size_1dp"
                    android:right="@dimen/size_1dp"
                    android:top="@dimen/size_1dp" />
        </shape>
    </item>


    <!-- main background !-->
    <item>
        <shape>
            <corners android:radius="@dimen/size_8dp"></corners>
            <solid android:color="@color/white" />
        </shape>
    </item>


</layer-list>