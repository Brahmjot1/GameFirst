<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardTask"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/size_2dp"
        app:cardCornerRadius="@dimen/size_5dp"
        android:layout_margin="@dimen/size_5dp"
        android:layout_height="@dimen/size_45dp">

        <RelativeLayout
            android:id="@+id/relTask"
            android:layout_width="match_parent"
            android:background="@drawable/bg_icon_square"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relTop"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/size_5dp"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardIcon"
                    android:layout_width="@dimen/size_40dp"
                    app:cardCornerRadius="@dimen/size_10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="@dimen/size_0dp"
                    android:layout_height="@dimen/size_40dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/ivIcon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/size_8dp"
                    android:layout_toRightOf="@+id/cardIcon"
                    android:orientation="horizontal">

                    <com.player.cricketfirst.util.font.BoldTextView
                        android:id="@+id/txtTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/size_10dp" />

                    <LinearLayout
                        android:id="@+id/llabel"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="@dimen/size_5dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/bg_preview_right"
                        android:visibility="visible">

                        <com.player.cricketfirst.util.font.BoldTextView
                            android:id="@+id/txtLable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/size_3dp"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/size_8dp" />
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lAds"
                android:layout_width="@dimen/size_20dp"
                android:layout_height="@dimen/size_20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_round_new"
                android:visibility="visible">

                <com.player.cricketfirst.util.font.BoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_5dp"
                    android:layout_marginTop="@dimen/size_3dp"
                    android:rotation="45"
                    android:text="Ad"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_8dp" />
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>