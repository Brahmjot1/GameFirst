<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardOffer"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/size_8dp"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="@dimen/size_5dp"
        app:cardElevation="@dimen/size_5dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivBgBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/ivBgBanner"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_toLeftOf="@+id/txtBtnName"
                    android:layout_marginRight="@dimen/size_5dp"
                    android:paddingLeft="@dimen/size_5dp"
                    android:paddingTop="@dimen/size_5dp"
                    android:paddingBottom="@dimen/size_5dp"
                    android:paddingRight="@dimen/size_5dp">

                    <com.player.cricketfirst.util.font.BoldTextView
                        android:id="@+id/txtTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="@dimen/size_5dp"
                        android:layout_toLeftOf="@+id/txtInstall"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_12dp" />

                    <com.player.cricketfirst.util.font.BoldTextView
                        android:id="@+id/txtDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="@dimen/size_5dp"
                        android:layout_toLeftOf="@+id/txtInstall"
                        android:textColor="@color/divider"
                        android:textSize="@dimen/size_11dp" />

                </LinearLayout>

                <com.player.cricketfirst.util.font.BoldTextView
                    android:id="@+id/txtBtnName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/size_8dp"
                    android:layout_marginRight="@dimen/size_8dp"
                    android:background="@drawable/bg_claim_bonus"
                    android:padding="@dimen/size_6dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_11dp" />
            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>