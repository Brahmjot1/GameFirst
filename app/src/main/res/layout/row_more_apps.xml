<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardApps"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/size_8dp"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="@dimen/size_5dp"
        app:cardElevation="@dimen/size_5dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivBgBanner"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="@dimen/size_140dp"
                android:adjustViewBounds="true" />

            <RelativeLayout
                android:id="@+id/relImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivBgBanner"
                android:layout_marginTop="-45dp"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_marginRight="@dimen/size_10dp"
                android:elevation="@dimen/size_3dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/size_60dp"
                    android:layout_height="@dimen/size_60dp"
                    android:layout_margin="@dimen/size_3dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/size_8dp"
                    app:cardElevation="@dimen/size_3dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/ivSmallIcon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/size_5dp"
                            android:adjustViewBounds="true" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ivBgBanner"
                android:layout_marginLeft="@dimen/size_80dp"
                android:layout_marginTop="@dimen/size_5dp"
                android:layout_marginRight="@dimen/size_8dp"
                android:layout_marginBottom="@dimen/size_8dp">

                <com.player.cricketfirst.util.font.BoldTextView
                    android:id="@+id/txtAppName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="@dimen/size_5dp"
                    android:layout_toLeftOf="@+id/txtInstall"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/size_12dp" />


                <com.player.cricketfirst.util.font.BoldTextView
                    android:id="@+id/txtInstall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_btn_acent"
                    android:padding="@dimen/size_6dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_11dp" />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>