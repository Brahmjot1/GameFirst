<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="@dimen/size_240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:fitsSystemWindows="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtMenuFooter"
                android:layout_alignParentTop="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_120dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/profile_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerCrop"
                            android:src="@drawable/banner_navigation" />

                        <com.player.cricketfirst.util.font.RegularTextView
                            android:id="@+id/txtAppVersion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="@dimen/size_10dp"
                            android:layout_marginTop="@dimen/size_10dp"
                            android:layout_marginEnd="@dimen/size_10dp"
                            android:layout_marginRight="@dimen/size_10dp"
                            android:layout_marginBottom="@dimen/size_5dp"
                            android:gravity="end"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/size_8dp" />

                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvMenulist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_5dp"
                        android:layout_marginTop="@dimen/size_5dp"
                        android:layout_marginRight="@dimen/size_5dp"
                        android:layout_marginBottom="@dimen/size_5dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_2dp"
                        android:background="@color/filter_ad_bg" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/size_5dp"
                        android:layout_marginRight="@dimen/size_5dp"
                        android:layout_marginLeft="@dimen/size_5dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/cardColor"
                            android:layout_margin="@dimen/size_5dp"
                            app:cardElevation="@dimen/size_3dp"
                            app:cardCornerRadius="@dimen/size_5dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:background="@drawable/bg_border_drawer"
                                android:layout_margin="@dimen/size_1dp"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:id="@+id/MenuAboutUs"
                                    android:layout_width="@dimen/size_70dp"
                                    android:layout_height="@dimen/size_70dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="@dimen/size_20dp"
                                        android:layout_height="@dimen/size_20dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="@dimen/size_10dp"
                                        android:src="@drawable/icon_menu_aboutus"
                                        app:tint="@color/white" />

                                    <com.player.cricketfirst.util.font.MediumTextView
                                        android:layout_width="@dimen/size_70dp"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="About Us"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/size_10dp" />
                                </LinearLayout>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/size_5dp"
                            app:cardBackgroundColor="@color/cardColor"
                            app:cardElevation="@dimen/size_3dp"
                            app:cardCornerRadius="@dimen/size_5dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:background="@drawable/bg_border_drawer"
                                android:layout_margin="@dimen/size_1dp"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:id="@+id/MenuShareApp"
                                    android:layout_width="@dimen/size_70dp"
                                    android:layout_height="@dimen/size_70dp"
                                    android:layout_weight="1"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="@dimen/size_20dp"
                                        android:layout_height="@dimen/size_20dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="@dimen/size_10dp"
                                        android:src="@drawable/icon_menu_share"
                                        app:tint="@color/white" />

                                    <com.player.cricketfirst.util.font.MediumTextView
                                        android:layout_width="@dimen/size_70dp"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Share App"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/size_10dp" />
                                </LinearLayout>
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/size_5dp"
                            app:cardElevation="@dimen/size_3dp"
                            app:cardBackgroundColor="@color/cardColor"
                            app:cardCornerRadius="@dimen/size_5dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:background="@drawable/bg_border_drawer"
                                android:layout_margin="@dimen/size_1dp"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:id="@+id/menuRateApp"
                                    android:layout_width="@dimen/size_70dp"
                                    android:layout_height="@dimen/size_70dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:layout_gravity="center">

                                    <ImageView
                                        android:layout_width="@dimen/size_20dp"
                                        android:layout_height="@dimen/size_20dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="@dimen/size_10dp"
                                        android:src="@drawable/star"
                                        app:tint="@color/white" />

                                    <com.player.cricketfirst.util.font.MediumTextView
                                        android:layout_width="@dimen/size_70dp"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Rate Us"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/size_10dp" />
                                </LinearLayout>
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/size_5dp"
                        android:layout_marginLeft="@dimen/size_5dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/size_5dp"
                            app:cardBackgroundColor="@color/cardColor"
                            app:cardElevation="@dimen/size_3dp"
                            app:cardCornerRadius="@dimen/size_5dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:background="@drawable/bg_border_drawer"
                                android:layout_margin="@dimen/size_1dp"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:id="@+id/menuContactUs"
                                    android:layout_width="@dimen/size_70dp"
                                    android:layout_height="@dimen/size_70dp"
                                    android:layout_centerInParent="true"
                                    android:layout_weight="1"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="@dimen/size_20dp"
                                        android:layout_height="@dimen/size_20dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="@dimen/size_10dp"
                                        android:src="@drawable/icon_menu_contectus"
                                        app:tint="@color/white" />

                                    <com.player.cricketfirst.util.font.MediumTextView
                                        android:layout_width="@dimen/size_70dp"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Contact Us"
                                        android:layout_gravity="center"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/size_10dp" />
                                </LinearLayout>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/size_5dp"
                            app:cardElevation="@dimen/size_3dp"
                            app:cardBackgroundColor="@color/cardColor"
                            app:cardCornerRadius="@dimen/size_5dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:background="@drawable/bg_border_drawer"
                                android:layout_margin="@dimen/size_1dp"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:id="@+id/menuPrivacyPolicy"
                                    android:layout_width="@dimen/size_70dp"
                                    android:layout_height="@dimen/size_70dp"
                                    android:layout_centerInParent="true"
                                    android:layout_weight="1"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="@dimen/size_20dp"
                                        android:layout_height="@dimen/size_20dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="@dimen/size_10dp"
                                        android:src="@drawable/icon_menu_privacy"
                                        app:tint="@color/white" />

                                    <com.player.cricketfirst.util.font.MediumTextView
                                        android:layout_width="@dimen/size_70dp"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:text="Privacy\nPolicy"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/size_10dp" />
                                </LinearLayout>
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardMoreApp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/cardColor"
                            android:visibility="gone"
                            android:layout_margin="@dimen/size_5dp"
                            app:cardElevation="@dimen/size_3dp"
                            app:cardCornerRadius="@dimen/size_5dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:background="@drawable/bg_border_drawer"
                                android:layout_margin="@dimen/size_1dp"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:id="@+id/menuMoreApps"
                                    android:layout_width="@dimen/size_70dp"
                                    android:layout_height="@dimen/size_70dp"
                                    android:layout_gravity="center"
                                    android:layout_centerInParent="true"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="@dimen/size_20dp"
                                        android:layout_height="@dimen/size_20dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="@dimen/size_10dp"
                                        android:src="@drawable/more_app"
                                        app:tint="@color/white" />

                                    <com.player.cricketfirst.util.font.MediumTextView
                                        android:layout_width="@dimen/size_70dp"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="More Apps"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/size_10dp" />
                                </LinearLayout>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/menuAdBanner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:padding="@dimen/size_3dp" />

                </LinearLayout>

            </ScrollView>

        </RelativeLayout>


    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
