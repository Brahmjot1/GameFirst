<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="@dimen/size_45dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgNavigation"
                android:layout_width="@dimen/size_45dp"
                android:layout_height="@dimen/size_45dp"
                android:padding="@dimen/size_10dp"
                android:src="@drawable/baseline_menu_24"
                android:scaleType="centerInside"
                />
        </RelativeLayout>


        <fantasy.livematch.firstscore.util.font.BoldTextView
            android:id="@+id/action_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/size_16dp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/ivWebMain"
        android:layout_width="@dimen/size_25dp"
        android:layout_height="@dimen/size_25dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/size_8dp"
        android:layout_toLeftOf="@+id/lRight"
        android:scaleType="centerInside"
        android:src="@drawable/ic_web" />

    <LinearLayout
        android:id="@+id/lRight"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/size_5dp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivNotification"
            android:layout_width="@dimen/size_28dp"
            android:layout_height="@dimen/size_28dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_5dp"
            android:layout_toLeftOf="@+id/imgStory"
            android:scaleType="centerInside"
            android:src="@drawable/iv_notify" />

        <ImageView
            android:background="@drawable/diloage_round_bg"
            android:layout_marginRight="@dimen/size_10dp"
            android:layout_alignParentRight="true"
            android:id="@+id/imgStory"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/size_35dp"
            android:layout_height="@dimen/size_35dp"
            android:scaleType="centerInside"
            />
    </LinearLayout>


</RelativeLayout>
