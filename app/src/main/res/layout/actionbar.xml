<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgNavigation"
            android:layout_width="@dimen/size_45dp"
            android:layout_height="@dimen/size_45dp"
            android:padding="@dimen/size_15dp"
            android:src="@drawable/ic_back"
            android:scaleType="centerInside"
             />

        <com.player.cricketfirst.util.font.BoldTextView
            android:id="@+id/action_bar_title"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_5dp"
            android:layout_toRightOf="@+id/imgNavigation"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/size_16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/size_8dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivWebMain"
                android:layout_width="@dimen/size_28dp"
                android:layout_height="@dimen/size_28dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_web" />

            <LinearLayout
                android:id="@+id/ivWebPrime"
                android:layout_width="wrap_content"
                android:background="@drawable/bg_round_team"
                android:layout_marginLeft="@dimen/size_5dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingRight="@dimen/size_5dp"
                android:layout_height="@dimen/size_28dp">

                <ImageView
                    android:layout_width="@dimen/size_28dp"
                    android:layout_height="@dimen/size_28dp"
                    android:layout_marginRight="@dimen/size_5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/iv_team" />

                <com.player.cricketfirst.util.font.BoldTextView
                    android:layout_width="wrap_content"
                    android:text="Prime Team"
                    android:textSize="@dimen/size_10dp"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
