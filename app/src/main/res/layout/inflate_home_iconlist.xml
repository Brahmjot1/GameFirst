<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/relSlider"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/size_8dp"
        android:layout_marginRight="@dimen/size_8dp"
        android:background="@drawable/cardview"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/adLayout"
            android:layout_width="@dimen/size_15dp"
            android:layout_marginLeft="@dimen/size_3dp"
            android:layout_marginRight="@dimen/size_3dp"
            android:layout_marginTop="@dimen/size_3dp"
            android:src="@drawable/ad_logo"
            android:layout_height="@dimen/size_15dp"/>

        <LinearLayout
            android:id="@+id/loutMain"
            android:layout_width="match_parent"
            android:layout_below="@+id/adLayout"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/size_5dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvIconlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>