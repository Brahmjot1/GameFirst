<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ad_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size_3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_3dp"
            android:orientation="vertical"
            android:paddingLeft="@dimen/size_3dp"
            android:paddingRight="@dimen/size_3dp"
            android:paddingBottom="@dimen/size_3dp">

            <com.google.android.gms.ads.nativead.MediaView
                android:id="@+id/mediaView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/size_4dp"
                android:paddingRight="@dimen/size_4dp"
                android:paddingBottom="@dimen/size_8dp"
                android:paddingTop="@dimen/size_4dp"
                android:background="@drawable/bg_bottom_rounded_white"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/adAttribute"
                    android:layout_width="@dimen/size_20dp"
                    android:layout_height="@dimen/size_12dp"
                    android:background="@drawable/ad_background"
                    android:gravity="center"
                    android:text="Ad"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/size_8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/size_6dp"
                    android:paddingRight="@dimen/size_6dp"
                    android:layout_marginTop="@dimen/size_2dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.2">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/adIcon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:adjustViewBounds="true" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/size_6dp"
                        android:layout_marginEnd="@dimen/size_3dp"
                        android:layout_weight="0.8"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/adTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size_12dp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/adDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:maxLines="1"
                            android:textColor="@color/gray_scale"
                            android:textSize="@dimen/size_10dp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/adAdvertiser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/gray_scale"
                            android:textSize="@dimen/size_10dp" />
                    </LinearLayout>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/callToAction"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_9dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/size_5dp"
                    android:layout_marginLeft="@dimen/size_5dp"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_marginBottom="@dimen/size_10dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bg_app_button"
                    android:elevation="0dp"
                    android:gravity="center"
                    android:text="INSTALL"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/size_12dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.gms.ads.nativead.NativeAdView>
