<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerHorizontal="true"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_marginRight="@dimen/size_10dp"
        android:layout_marginLeft="@dimen/size_10dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/size_8dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/size_5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/lDataExit"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <fantasy.livematch.firstscore.util.font.MediumTextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_12dp" />

                <RelativeLayout
                    android:padding="@dimen/size_1dp"
                    android:id="@+id/relPopup"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:layout_height="wrap_content">

                    <ProgressBar
                        android:id="@+id/probrBanner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/size_10dp"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:layout_marginEnd="@dimen/size_10dp"
                        android:layout_marginBottom="@dimen/size_10dp" />

                    <ImageView
                        android:id="@+id/imgBanner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true" />
                </RelativeLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/size_8dp"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/bg_exit_button"
                        android:layout_marginLeft="@dimen/size_10dp"
                        android:layout_marginRight="@dimen/size_10dp"
                        android:padding="@dimen/size_5dp"
                        android:gravity="center"
                        android:elevation="@dimen/size_4dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtMessage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/app_name"
                            android:textColor="@color/divider"
                            android:textSize="@dimen/size_11dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lWatch"
                        android:layout_width="wrap_content"
                        android:padding="@dimen/size_8dp"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:background="@drawable/bg_btn_acent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtWatch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/size_11dp" />
                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/colorAccent"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_height="@dimen/size_2dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutAds"
                android:layout_below="@+id/rec_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_5dp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/lblLoadingAds"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_80dp"
                    android:layout_margin="@dimen/size_5dp"
                    android:layout_marginTop="@dimen/size_3dp"
                    android:layout_marginBottom="@dimen/size_3dp"
                    android:background="@drawable/rectangle_white"
                    android:elevation="@dimen/size_3dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="Loading Ad.."
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_16dp" />

                <FrameLayout
                    android:id="@+id/fl_adplaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/size_5dp"
                    android:elevation="@dimen/size_3dp"
                    android:visibility="gone" />

                <FrameLayout
                    android:id="@+id/fl_adplaceholder_lovin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_250dp"
                    android:layout_margin="@dimen/size_5dp"
                    android:elevation="@dimen/size_3dp"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:background="@color/colorAccent"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_height="@dimen/size_2dp"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/loutHappy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginLeft="@dimen/size_2dp"
                android:layout_marginTop="@dimen/size_5dp"
                android:orientation="vertical"
                android:padding="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/exit_title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8dp"
                android:layout_marginLeft="@dimen/size_5dp"
                android:layout_marginRight="@dimen/size_5dp"
                android:layout_marginBottom="@dimen/size_5dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnYesExit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_38dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/size_3dp"
                    android:background="@drawable/bg_btn_acent"
                    android:gravity="center"
                    android:text="YES"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="@dimen/size_11dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnNoExit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_38dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_btn_acent"
                    android:gravity="center"
                    android:text="NO"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_11dp" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>